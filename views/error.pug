extends base

block content
    main
        if searchTerms
            div(class="error__container")
                div(class="error__title")
                    h2(class="error__heading") Uh oh! Something went wrong!!
                    h2(class="error__emoji") 👁‍🗨...❌
                div(class="error__message")
                    p No results found for
                    h3= `${searchTerms}`
                    p , Please search again.
        if !user
            div(class="error__container")
                div(class="error__title")
                    h2(class="error__heading")= message
                    h2(class="error__emoji") 👁‍🗨...❌
